datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URI")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  ADMIN
  USER
}

model Password {
  hash   String
  userId Int    @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password Password?
  approved Boolean   @default(true)
  userRole UserRole
}
