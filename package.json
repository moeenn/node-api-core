{
  "name": "node-api-core",
  "version": "1.0.0",
  "main": "src/index.mjs",
  "license": "MIT",
  "scripts": {
    "start": "node ./src/index.mjs",
    "type-check": "tsc --project jsconfig.json",
    "test": "NODE_ENV='test' dotenv -e .env -- node --test",
    "lint": "npx eslint ./src/ --ext .mjs",
    "fmt": "npx prettier --write 'src/**/*.mjs'",
    "check": "npm run type-check && npm run lint",
    "env:check": "node ./src/core/scripts/validateEnv.mjs",
    "gen:secret": "node ./src/core/scripts/generateSecret.mjs",
    "gen:types": "npx prisma generate",
    "db:migrate": "npx prisma migrate dev",
    "db:seed": "npx prisma db seed"
  },
  "imports": {
    "#src/*": "./src/*"
  },
  "prettier": {
    "singleQuote": false,
    "semi": false,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "root": true,
    "extends": "eslint:recommended",
    "env": {
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": "latest"
    },
    "rules": {
      "quotes": [
        2,
        "double",
        {
          "allowTemplateLiterals": true,
          "avoidEscape": true
        }
      ],
      "semi": [
        "error",
        "never"
      ]
    }
  },
  "env": [
    "FRONT_END_URL",
    "DATABASE_URI",
    "APP_SECRET",
    "FROM_EMAIL"
  ],
  "devDependencies": {
    "@faker-js/faker": "^8.0.1",
    "@types/events": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/marked": "^4.3.0",
    "@types/node": "^18.14.5",
    "@types/owasp-password-strength-test": "^1.3.0",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.35.0",
    "json-schema-to-ts": "^2.8.2",
    "prettier": "^2.8.4",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "prisma": "^4.15.0",
    "@fastify/cors": "^8.2.1",
    "@fastify/helmet": "^10.1.1",
    "@fastify/rate-limit": "^8.0.0",
    "@fastify/request-context": "^4.2.0",
    "@prisma/client": "^4.15.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "argon2": "^0.30.3",
    "axios": "^1.4.0",
    "fastify": "^4.17.0",
    "jsonwebtoken": "^9.0.0",
    "marked": "^5.0.2",
    "owasp-password-strength-test": "^1.3.0"
  }
}
