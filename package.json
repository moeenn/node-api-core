{
  "name": "node-api-core",
  "version": "1.0.0",
  "main": "src/index.mjs",
  "license": "MIT",
  "scripts": {
    "dev": "dotenv -e .env -- npm run env:check && node ./src/index.mjs",
    "start": "NODE_ENV=production npm run env:check && node ./src/index.mjs",
    "type-check": "tsc --project jsconfig.json",
    "test": "npx vitest",
    "lint": "npx eslint ./src/ --ext .mjs",
    "fmt": "npx prettier --write 'src/**/*.mjs'",
    "check": "npm run type-check && npm run lint",
    "env:check": "node ./src/core/scripts/validateEnv.mjs",
    "gen:secret": "node ./src/core/scripts/generateSecret.mjs"
  },
  "imports": {
    "#src/*": "./src/*"
  },
  "prettier": {
    "singleQuote": false,
    "semi": false,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "root": true,
    "extends": "eslint:recommended",
    "env": {
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": "latest"
    },
    "rules": {
      "quotes": [
        2,
        "double",
        {
          "allowTemplateLiterals": true,
          "avoidEscape": true
        }
      ],
      "semi": [
        "error",
        "never"
      ]
    }
  },
  "env": [
    "FRONT_END_URL",
    "DATABASE_URI",
    "JWT_SECRET"
  ],
  "devDependencies": {
    "@types/node": "^18.14.5",
    "eslint": "^8.35.0",
    "prettier": "^2.8.4",
    "typescript": "^4.9.5",
    "vitest": "^0.29.2"
  },
  "dependencies": {
    "@fastify/error": "^3.2.0",
    "@fastify/rate-limit": "^8.0.0",
    "@fastify/request-context": "^4.2.0",
    "argon2": "^0.30.3",
    "dotenv-cli": "^7.0.0",
    "fastify": "^4.14.1",
    "jsonwebtoken": "^9.0.0"
  }
}
